<div class="row-fluid well">
  <p class="lead">List of Questions</p>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Question</th>
          <th>Answer</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.body %></td>
            <td><%= question.answer %></td>
            <td><%= link_to 'imperials', chart_path(question) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
